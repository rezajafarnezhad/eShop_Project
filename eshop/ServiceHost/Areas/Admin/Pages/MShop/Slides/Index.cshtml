@page
@model ServiceHost.Areas.Admin.Pages.MShop.Slides.IndexModel



@{
    Layout = "Shared/_AdminLayout";
    ViewData["title"] = "مدیریت اسلایدر";
}

<div class="row">
    <div class="col-sm-12">
        <h4 class="page-title pull-right">@ViewData["title"]</h4>
        <p class="pull-left">
            <a class="btn btn-success" href="#showmodal=@Url.Page("./Index", "Create")">ایجاد تصویر اسلایدر </a>
        </p>
    </div>
</div>


<div class="row" id="ProductCategoriesDiv">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">لیست تصاویر اسلایدر</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>عکس</th>
                                    <th>Header</th>
                                    <th>عنوان</th>
                                    <th>وضعیت</th>
                                    <th>تاریخ درج</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.slides)
                                {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>
                                        <img src="~/ProductPicture/@item.Picture" style="width: 200px; height:100px" />
                                    </td>
                                    <td>@item.Heading</td>
                                    <td>@item.Title</td>

                                    <td>
                                        @if (!item.IsRemoved)
                                        {
                                            <i class="fa fa-2x fa fa-check text-success"></i>
                                        }
                                        else
                                        {
                                            <i class="fa fa-2x fa fa-remove text-danger"></i>

                                        }
                                    </td>
                                    <td>@item.CreationDate</td>
                                    <td>
                                        <a class="btn btn-warning pull-right m-rl-5"
                                           href="#showmodal=@Url.Page("./Index", "Edit", new { id = item.Id})">
                                            <i class="fa fa-edit"></i> ویرایش
                                        </a>

                                        @if (item.IsRemoved)
                                        {

                                            <form method="post" asp-page-handler="Restore" class="pull-left">
                                                <input type="hidden" name="id" asp-for="@item.Id" />
                                                <button class="btn btn-success">فعال کردن</button>
                                            </form>

                                        }
                                        else
                                        {
                                            <form method="post" asp-page-handler="Remove" class="pull-left">
                                                <input type="hidden" name="id" asp-for="@item.Id" />
                                                <button class="btn btn-danger">غیر فعال کردن</button>
                                            </form>
                                        }


                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Sc {
    <script src="~/AdminPanel/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/AdminPanel/assets/datatables/dataTables.bootstrap.js"></script>
    <script src="~/AdminTheme/assets/js/site.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#datatable').dataTable();
        });
    </script>
}
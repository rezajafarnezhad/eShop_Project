@model ShopManagement.Application.Contract.ProductPicture.EditproductPicture
@{
}


<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">ویرایش تصویر محصول :@Model.PictureAlt </h4>
</div>

<form asp-page="./Index" asp-page-handler="Edit"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">
        <input type="hidden" asp-for="@Model.Id" value="@Model.Id" />
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="@Model.PictureName" class="control-label">تصویر محصول</label>
                    <input type="file" class="form-control" asp-for="@Model.PictureName" accept="images/*">
                    <span asp-validation-for="@Model.PictureName" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="@Model.ProductId" class="control-label">محصول</label>
                    <select type="text" class="form-control" asp-for="@Model.ProductId"
                            asp-items='new SelectList(Model.Products,"Id","Name")'>
                        <option value="0">انتخاب محصول مورد نظر..</option>
                    </select>
                    <span asp-validation-for="ProductId" class="error"></span>
                </div>
            </div>
        </div>


        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="@Model.PictureAlt" class="control-label">Alt</label>
                    <input type="text" class="form-control" asp-for="@Model.PictureAlt">
                    <span asp-validation-for="@Model.PictureAlt" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="@Model.PictureTitle" class="control-label">عنوان عکس</label>
                    <input type="text" class="form-control" asp-for="@Model.PictureTitle">
                    <span asp-validation-for="@Model.PictureTitle" class="error"></span>
                </div>
            </div>
        </div>

    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-warning waves-effect waves-light">ویرایش</button>
    </div>
</form>
@page
@model ServiceHost.Areas.Admin.Pages.MAccount.Role.IndexModel

@{
    Layout = "Shared/_AdminLayout";
    ViewData["title"] = "مدیریت نقش ها";
}

<div class="row">
    <div class="col-sm-12">
        <h4 class="page-title pull-right">@ViewData["title"]</h4>
        <p class="pull-left">
            <a class="btn btn-success" asp-page="Create">ایجاد نقش جدید</a>
        </p>
    </div>
</div>


<div class="row" id="ProductCategoriesDiv">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">لیست نقش ها</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>نام نقش</th>
                                    <th>تاریخ درج</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.roles)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Name</td>
                                        <td>@item.CreationDate</td>
                                        <td>
                                            <a class="btn btn-purple btn-rounded waves-effect waves-light m-b-5"
                                               asp-page="Edit" asp-route-id="@item.Id">
                                                <i class="fa fa-edit"></i>  تخصیص دسترسی و ویرایش نام نقش
                                            </a>
                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Sc {
    <script src="~/AdminPanel/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/AdminPanel/assets/datatables/dataTables.bootstrap.js"></script>
    <script src="~/AdminTheme/assets/js/site.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#datatable').dataTable();
        });
    </script>
}
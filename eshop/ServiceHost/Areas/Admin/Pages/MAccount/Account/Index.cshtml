@page
@model ServiceHost.Areas.Admin.Pages.MAccount.Account.IndexModel



@{
    Layout = "Shared/_AdminLayout";
    ViewData["title"] = "مدیریت کاربران";
}

<div class="row">
    <div class="col-sm-12">
        <h4 class="page-title pull-right">@ViewData["title"]</h4>
        <p class="pull-left">
            <a class="btn btn-success" href="#showmodal=@Url.Page("./Index", "Create")">ایجاد کاربر جدید</a>
        </p>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">جستجو در کاربران</h3>
            </div>
            <div class="panel-body">
                <form class="form-inline" role="form" method="get">
                    <div class="form-group">
                        <label class="sr-only" asp-for="SearchModel.FullName"></label>
                        <input class="form-control" asp-for="SearchModel.FullName" placeholder="نام">
                    </div>
                    <div class="form-group">
                        <label class="sr-only" asp-for="SearchModel.Mobile"></label>
                        <input type="number"  class="form-control" asp-for="SearchModel.Mobile" placeholder="موبایل">
                    </div>
                    <div class="form-group">
                        <label class="sr-only" asp-for="SearchModel.UserName"></label>
                        <input class="form-control" asp-for="SearchModel.UserName" placeholder="نام کاربری">
                    </div>
                    <div class="form-group">
                        <label class="sr-only">نقش</label>
                        <select class="form-control" asp-for="SearchModel.RoleId" asp-items="@Model.Roles">
                            <option value="0">نقش</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-success waves-effect waves-light m-l-10">جستجو</button>
                    <a class="btn btn-primary waves-effect waves-light m-l-10" asp-page="./Index">مشاهده همه</a>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row" id="ProductCategoriesDiv">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">لیست کاربران</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>عکس</th>
                                    <th>نام</th>
                                    <th>نام کاربری</th>
                                    <th>موبایل</th>
                                    <th>نقش</th>
                                    <th>تاریخ ثبت نام</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Account)
                                {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>
                                        <img src="~/ProductPicture/@item.ProfilePicture" style="width: 70px; height: 70px" />
                                    </td>
                                    <td>@item.FullName</td>
                                    <td>@item.Username</td>

                                    <td>@item.Mobile</td>

                                    <td>@item.RoleName</td>
                                    <td>@item.RegisterDate</td>
                                    <td>
                                        <a class="btn  btn-warning waves-effect waves-light m-b-5"
                                           href="#showmodal=@Url.Page("./Index", "Edit", new { id = item.Id})">
                                            <i class="fa fa-edit"></i> ویرایش
                                        </a>
                                        <a class="btn  btn-info waves-effect waves-light m-b-5"
                                           href="#showmodal=@Url.Page("./Index", "ChangePassword", new { id = item.Id})">
                                            <i class="fa fa-key"></i> تغییر رمز
                                        </a>
                                        

                                    </td>

                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Sc {
    <script src="~/AdminPanel/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/AdminPanel/assets/datatables/dataTables.bootstrap.js"></script>
    <script src="~/AdminTheme/assets/js/site.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#datatable').dataTable();
        });
    </script>
}